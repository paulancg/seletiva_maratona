//link

#include <bits/stdc++.h>
#define ll long long int
using namespace std;

int main(){
    
    ios_base::sync_with_stdio(false);
    cin.tie(0);

    
    int n; cin >> n;
    ll total = 0;
    int i = 0;
    
    while (i < n){
        
        int t, d;
        cin >> t >> d;
        
        if (i == 0){
            
            total += t + d;
            
            
        }
        else{
            
            if(t <= total){
                
                total += d;
                
                
            }
            else{
                
                total += t - total + d;
                
            }
            
            
        }
        
        //int t_ant = t;
        //int d_ant = d;
        i++;
    }
    
    
    cout << total << '\n';

    return 0;
}
