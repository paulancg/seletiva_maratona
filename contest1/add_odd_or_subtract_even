//https://codeforces.com/problemset/problem/1311/A
#include <bits/stdc++.h>
using namespace std;

int main()
{
    int t;
    cin >> t;
    
    for (int i = 0; i < t; i++){
        
        int a, b;
        cin >> a >> b;
        
        if (a == b){
            
            cout << "0" << "\n";
            
        }
        
        if (a < b){
            
            if ((b - a) % 2 != 0){
                
                cout << "1" << "\n";
                
            }
            
            else if ((b - a) % 2 == 0){
                
                cout << "2" << "\n";
                
            }
            
        }
        
        if (a > b){
            
            if ((b - a) % 2 != 0){
                
                cout << "2" << "\n";
                
            }
            
            else if ((b - a) % 2 == 0){
                
                cout << "1" << "\n";
                
            }
            
        }
        
        
    }

    return 0;
}
